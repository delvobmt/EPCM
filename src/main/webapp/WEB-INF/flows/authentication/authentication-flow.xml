<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_ANONYMOUS" />

	<input name="register"/>
	<view-state id="login">
		<transition on="registration" to="registration" />
	</view-state>
	
	<view-state id="registration">
		<transition on="login" to="login"/>
		<transition on="success" to="welcome"/>
		<transition on="fail"/>
	</view-state>
	
	<end-state id="welcome" view="externalRedirect:/authentication?register=success"/>

</flow>