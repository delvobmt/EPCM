<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_ANONYMOUS" />

	<view-state id="login">
		<transition on="registration" to="registration" />
	</view-state>
	
	<view-state id="registration">
		<transition on="login" to="login"/>
		<transition on="performRegistration" >
			<evaluate expression="accountBean.register()"/>
		</transition>
		<transition on="success" to="login">
		</transition>
		<transition on="fail"/>
	</view-state>
</flow>