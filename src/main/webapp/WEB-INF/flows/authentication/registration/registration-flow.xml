<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<secured attributes="ROLE_ANONYMOUS" />
	
	<view-state id="registration">
		<transition on="login" to="login" />
		<transition on="success" to="success"/>
		<transition on="fail" to="fail"/>
	</view-state>
	
	<end-state id="login" view="/authentication">
		<output name="register" value="'success'"/>
	</end-state>
	<end-state id="success" view="/authentication">
		<output name="register" value="'success'"/>
	</end-state>
	<end-state id="fail" view="/authentication">
		<output name="register" value="'fail'"/>
	</end-state>
</flow>